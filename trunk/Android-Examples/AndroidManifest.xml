<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="com.emo_framework.examples"
        android:versionCode="1"
        android:versionName="1.0">

    <uses-sdk android:minSdkVersion="9" />

    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <activity android:name=".Launcher"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Main"
                  android:label="@string/app_name">
            <meta-data android:name="android.app.lib_name"
                       android:value="emo-android" />
        </activity>

        <activity-alias android:name=".ShapeExample"
            android:targetActivity=".Main"
            android:label="@string/shape_example_name">
            <meta-data android:name="android.app.lib_name"
                       android:value="emo-android" />
            <meta-data android:name="emo.script.runtime"
                       android:value="runtime.nut" />
            <meta-data android:name="emo.script.main"
                       android:value="shape_example.nut" />
        </activity-alias>

        <activity-alias android:name=".SpriteExample"
            android:targetActivity=".Main"
            android:label="@string/sprite_example_name">
            <meta-data android:name="android.app.lib_name"
                       android:value="emo-android" />
            <meta-data android:name="emo.script.runtime"
                       android:value="runtime.nut" />
            <meta-data android:name="emo.script.main"
                       android:value="sprite_example.nut" />
        </activity-alias>

        <activity-alias android:name=".PeriodicUpdateExample"
            android:targetActivity=".Main"
            android:label="@string/sprite_example_name">
            <meta-data android:name="android.app.lib_name"
                       android:value="emo-android" />
            <meta-data android:name="emo.script.runtime"
                       android:value="runtime.nut" />
            <meta-data android:name="emo.script.main"
                       android:value="periodic_update_example.nut" />
        </activity-alias>
    </application>
    <uses-permission android:name="android.permission.INTERNET" />
</manifest> 
