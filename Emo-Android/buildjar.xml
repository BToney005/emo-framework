<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project basedir="." default="all" name="emo_framework">

	<property environment="env" />
	<property name="target" value="1.6" />
	<property name="source" value="1.6" />
	<property name="bin" value="bin" />
	<property name="src" value="src" />
	
	<property name="binfile" value="export/emo_framework.jar" />
	<property name="sofile"  value="libs/armeabi/libemo-android.so" />
	<property name="rscript"  value="assets/runtime.nut" />
		
	<property name="to_dir"  value="../Android-Examples/" />
	<property name="bin_to"  value="libs/emo_framework.jar" />
	<property name="so_to"   value="libs/armeabi/libemo-android.so" />
	<property name="rsc_to"  value="assets/runtime.nut" />
   
	<target name="buildjar">
		<jar destfile="${binfile}">
			<zipfileset dir="${bin}">
				<include name="**/*.properties" />
				<include name="**/*.class" />
				<exclude name="**/R.class" />
				<exclude name="**/R$*.class" />
			</zipfileset>
		</jar>
	</target>
	
	<target name="copyjar">
		<copy file="${binfile}"  tofile="${to_dir}${bin_to}"/>
		<copy file="${sofile}"   tofile="${to_dir}${so_to}"/>
		<copy file="${rscript}"  tofile="${to_dir}${rsc_to}"/>
		<eclipse.refreshLocal resource="${to_dir}" depth="infinite"/>
	</target>

	<target name="all">
	    <antcall target="buildjar"/>
	    <antcall target="copyjar"/>
	</target>
</project>
